<div class=" container mt-4">
    <div class="mb-4">
    <%= link_to 'Back to List', fooditems_path, class: "btn btn-secondary" %>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <% if @fooditem.fooditem_image.attached? %>
                    <%= image_tag @fooditem.fooditem_image, :size => "300x300", class: "product-picture" %>
                <% end %>
            </div>

            <div class="col-md-8">
                <p class="mt-4">
                    <strong>Item Name:</strong>
                    <%= @fooditem.name %>
                </p>
                <p class="mt-4">
                    <strong>Item Quantity:</strong>
                    <%= @fooditem.quantity %>
                </p>  
                <p class="mt-4">
                    <strong>Unit Price:</strong>
                    $<%= @fooditem.unitprice %>
                </p>  
                <p class="mt-4">
                    <strong>Item Category:</strong>
                    <%= @fooditem.itemcategory %>
                </p>
                <%= link_to "Edit", edit_fooditem_path(@fooditem), class: "btn btn-warning" %>
            </div>
        </div>
    </div>
</div>

