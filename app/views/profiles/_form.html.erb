<%= form_for @profile do |f| %>

  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container mt-5 pt-5">
		<div class="d-flex justify-content-center">
			<div class="user_card editboxusercard">
				<div class="d-flex justify-content-center ">
					<div class="brand_logo_container">
						<img src="/donutlogo.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="justify-content-center form_container">
                     <div class="d-flex justify-content-center login_container ">
                     <% if new_user_profile_path = true %>
                        <h1> New Profile </h1>
                      <% else %>
                        <h1> Edit Profile </h1>
                      <% end %>
                    </div>
					<form>
						<div class="mb-3">
							<%= f.label :firstname, "User First Name", class: "font-weight-bold" %>
              <%= f.text_field :firstname, class: "form-control input_user" %>
						</div>
						<div class= "mb-2">
              <%= f.label :lastname, "User Last Name", class: "font-weight-bold" %>
              <%= f.text_field :lastname, class: "form-control input_user" %>        
						</div>
            <div class="mt-3">
              <%= f.label :address, "User Address", class: "font-weight-bold" %>
              <%= f.text_field :address, class: "form-control input_user" %>
						</div>
            <div class="mt-3">
              <%= f.label :phone, "User Phone", class: "font-weight-bold" %>
              <%= f.text_field :phone, class: "form-control" %>
						</div>
            <div class="mt-3">
              <%= f.label :description, "User Description", class: "font-weight-bold" %>
              <%= f.text_field :description, class: "form-control" %>
						</div>
			      <div class="d-flex justify-content-center mt-3 login_container">
              <%= f.submit "Submit", class: "btn login_btn" %>
            </div>
					</form>
				</div>
			</div>
		</div>
	</div>

<% end %>