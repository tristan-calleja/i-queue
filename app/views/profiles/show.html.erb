  <%#= link_to  "Update Profile", edit_user_profile_path(current_user.id, current_user.id), :class => "nav-item nav-link" %>

<div class="container mt-5 mb-5">
		<div class="d-flex justify-content-center">
			<div class="user_card showboxusercard">
				<div class="d-flex justify-content-center ">
					<div class="brand_logo_container">
						 <% if @profile.profile_image.attached? %>
              <%= image_tag @profile.profile_image, :size => "200x200", class: "profile-picture brand_logo" %>
              <% end %>
					</div>
				</div>
				<div class="justify-content-center form_container">
          <div class="d-flex justify-content-center login_container ">
            <h1>Show profile</h1>
          </div>
						<div class="mb-3 d-flex justify-content-center">
              Username: <%= current_user.username %> <br>
              First name: <%= @profile.firstname %> <br>
              Last name: <%= @profile.lastname %><br>
              Address: <%= @profile.address %><br>
              Phone: <%= @profile.phone %><br>
              Description: <%= @profile.description %>
						</div>
            <div class="d-flex justify-content-center mt-3 login_container">
              <%= link_to 'Edit', edit_user_profile_path(@profile), class: "btn login_btn" %>
            </div>
				</div>
			</div>
		</div>
	</div>