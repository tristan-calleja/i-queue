<h1>Menus#index</h1>
<p>Find me in app/views/menus/index.html.erb</p>

<div class="container">

    <% if user_signed_in? %>
        <% if current_user.admin? %>
            <%= link_to 'New Menu', new_menu_path, class: "btn btn-success" %> 
            <%= link_to  'Food Items', fooditems_path, class: "btn btn-primary" %>
        <% end %>
    <% end %>

</div>

<div class="container menubox align-items-center">
    <div class="row">
        <div class="col-md-12">
            <div class="vertical-tab" role="tabpanel">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <% @menus.each do |menu| %> 
                    
                    <li role="presentation"><a href="#Menu<%= menu.id %>" aria-controls="home" role="tab" data-toggle="tab"><%= menu.menu_name %></a></li>
                    <%# <%= link_to menu.menu_name, menu_path(menu.id) %> 
                    
                    <% end %> 
                    
                </ul>

                <!-- Tab panes -->
                <div class="tab-content tabs">
                    <% @menus.each do |menu| %> 
                    <div role="tabpanel" class="tab-pane fade in active" id="Menu<%= menu.id %>">
                    <div class="menu-card-title">
                        <h3><%= menu.menu_name %></h3>
                        <%= link_to 'Edit Menu', edit_menu_path(menu), class: "btn btn-warning btn-sm" %> 
                    </div>
                        <div>
                        <% menu.fooditems.each do |item| %>
                            <p><%= item.name %></p>
                        <% end %>
                        </div>
                    </div>
                        
                
                    <% end %> 
                </div>
            </div>
        </div>
    </div>
</div>


